<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mediumPurple"
    tools:context=".fragments.LobbyFragment">

    <TextView
        android:id="@+id/lobbyText"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_marginTop="80dp"
        android:text="@string/text_lobby"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameText1"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lobbyText" />

    <TextView
        android:id="@+id/usernameText2"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText1" />

    <TextView
        android:id="@+id/usernameText3"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText2" />

    <TextView
        android:id="@+id/usernameText4"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText3" />

    <TextView
        android:id="@+id/usernameText5"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText4" />

    <TextView
        android:id="@+id/usernameText6"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText5" />

    <TextView
        android:id="@+id/usernameText7"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText6" />

    <TextView
        android:id="@+id/usernameText8"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText7" />

    <Button
        android:id="@+id/readyButton"
        android:layout_width="188dp"
        android:layout_height="59dp"
        android:layout_marginBottom="80dp"
        android:text="@string/button_ready"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>